.collect-topbar {
  display: flex;
  padding: 40rpx 0;
  background-color: #f3f4f6;
}
.collect-topbar .collect-topbar-item {
  padding: 15rpx;
  margin-left: 15rpx;
  border: 1px solid #ccc;
  background-color: #fff;
}
.collect-topbar .active {
  color: var(--themeColor);
  border-color: var(--themeColor);
}
.goods-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}
.goods-item navigator {
  display: flex;
}
.goods-item .left {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 2;
}
.goods-item .left image {
  width: 70%;
}
.goods-item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 3;
}
.goods-item .right .goods-info {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods-item .right .goods-price {
  color: var(--themeColor);
}
